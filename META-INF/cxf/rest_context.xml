<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd
http://cxf.apache.org/jaxrs
http://cxf.apache.org/schemas/jaxrs.xsd">

	<import resource="classpath:META-INF/cxf/cxf.xml" />

	<!-- JAX-RS -->
	<jaxrs:server id="bhgoRest" address="/rs">
		<jaxrs:serviceBeans>
			<ref bean="PatientServiceBean" />
			<ref bean="ProcessServiceBean" />
			<ref bean="AuthenticationServiceBean" />
			<ref bean="VendorServiceBean" />
			<ref bean="MenuServiceBean" />
			<ref bean="MenuLineServiceBean" />
			<ref bean="TermsOfServiceBean" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<ref bean="jsonProvider" />
			<ref bean="authenticationFilter" />
		</jaxrs:providers>
	</jaxrs:server>

	<bean id="PatientServiceBean"
		class="org.bandahealth.idempiere.rest.service.impl.PatientRestService" />

	<bean id="ProcessServiceBean"
		class="org.bandahealth.idempiere.rest.service.impl.ProcessRestService" />

	<bean id="jsonProvider"
		class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider" />

	<bean id="authenticationFilter"
		class="org.bandahealth.idempiere.rest.filter.AuthenticationFilter" />

	<bean id="AuthenticationServiceBean"
		class="org.bandahealth.idempiere.rest.service.impl.AuthenticationRestService" />

	<bean id="VendorServiceBean"
		class="org.bandahealth.idempiere.rest.service.impl.VendorRestService" />

	<bean id="MenuServiceBean"
		class="org.bandahealth.idempiere.rest.service.impl.MenuRestService" />

	<bean id="MenuLineServiceBean"
		class="org.bandahealth.idempiere.rest.service.impl.MenuLineRestService" />

	<bean id="TermsOfServiceBean"
		class="org.bandahealth.idempiere.rest.service.impl.TermsOfServiceRestService" />

</beans>